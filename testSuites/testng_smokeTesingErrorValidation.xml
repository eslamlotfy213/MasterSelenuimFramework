<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite parallel="tests" name="Suite" thread-count="2">
  <groups>
    <run>
      <include name="Smoke"></include>
    </run>
  </groups>

  <listeners>
    <listener class-name="baseComponent.Listeners"/>
  </listeners>

  <test name="Error Validations Test">
    <classes>
      <class name="selenium.tests.ErrorValidationTest"/>
    </classes>
  </test> <!-- Test -->

  <test name="Submit Order Test">
    <classes>
      <class name="selenium.tests.SubmitOrderTest"/>
    </classes>
  </test> <!-- Test -->

</suite> <!-- Suite -->


